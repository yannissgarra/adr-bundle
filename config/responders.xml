<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Webmunkeez\AdrBundle\Response\Responder"></service>

        <service id="Webmunkeez\AdrBundle\Response\HtmlResponder">
            <tag name="app.responder" priority="-10"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="twig"/>
        </service>

        <service id="Webmunkeez\AdrBundle\Response\JsonResponder">
            <tag name="app.responder" priority="-10"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="serializer"/>
        </service>
    </services>
</container>